{
  "name": "aicode",
  "displayName": "AIcode",
  "description": "Your AI-powered coding assistant",
  "version": "0.0.1",
  "publisher": "YourName",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aicode.chatPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aicode-sidebar-view",
          "title": "AIcode",
          "icon": "media/aicode-icon.svg"
        }
      ]
    },
    "views": {
      "aicode-sidebar-view": [
        {
          "id": "aicode.chatPanel",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "aicode.showChatPanel",
        "title": "Show AIcode Chat Panel"
      }
    ],
    "configuration": {
      "title": "AIcode Configuration",
      "properties": {
        "aicode.backendHost": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "The host address for the AIcode backend server."
        },
        "aicode.backendPort": {
          "type": "number",
          "default": 5000,
          "description": "The port for the AIcode backend server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.17.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}

